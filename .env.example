# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# File Storage
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
RESULT_FOLDER=results

# GPU Configuration (optional)
CUDA_VISIBLE_DEVICES=0  # Set to empty string to disable GPU

# API Configuration
API_RATE_LIMIT=100  # requests per minute per IP
CORS_ORIGINS=*  # comma-separated list of allowed origins

# Cleanup Configuration
RESULT_CLEANUP_HOURS=24  # How long to keep processed images
CACHE_CLEANUP_HOURS=1    # How long to keep cached results

# Model Configuration
DEFAULT_MODEL=u2net
PRELOAD_MODELS=u2net,u2net_human_seg  # comma-separated list

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log