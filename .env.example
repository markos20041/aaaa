# Environment Configuration for Background Removal App

# Security
SECRET_KEY=your-super-secret-key-change-in-production

# Remove.bg API Configuration (Optional)
# Get your API key from https://www.remove.bg/api
REMOVE_BG_API_KEY=your-remove-bg-api-key-here
ENABLE_REMOVE_BG_FALLBACK=false

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Model Configuration
MODEL_CACHE_DIR=./models

# Flask Development Settings (Python version)
FLASK_ENV=development
FLASK_DEBUG=1

# Node.js Settings
NODE_ENV=development
PORT=3000

# Database Configuration (if using database caching)
# DATABASE_URL=postgresql://user:password@localhost:5432/background_removal

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_BATCH_SIZE=10

# Processing Options
DEFAULT_ENHANCE_EDGES=true
DEFAULT_FEATHER_RADIUS=1.0

# Performance Settings
ENABLE_GPU=true
WORKER_PROCESSES=1
WORKER_THREADS=4

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=100
UPLOAD_RATE_LIMIT_PER_MINUTE=30